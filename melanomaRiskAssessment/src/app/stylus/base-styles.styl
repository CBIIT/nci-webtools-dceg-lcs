body
    margin 0
    font-family sans-serif,  Helvetica, Calibri, Arial Rounded MT Bold

header
    margin 0
    background #f7f8f3
    position fixed
    top 0
    width 100%
    height 150px
    padding-top 0
    img#nci-banner
        width 95% !important
        max-width 500px
        min-width 30px
        height 60px !important
        padding 0 10px 0 20px
    #toolTitle
        background #2A71A5
        color white
        padding 10px 5px 15px 110px
        #toolName
            font-weight bold
            font-size .9em
        #toolDescription
            font-size .8em
            font-style italic

ul.nav
    padding 0
    margin 0
    padding-left 125px
    background #B5C6D0
    background linear-gradient(135deg, #ffffff 0%,#f2f6f8 5%, #d8e1e7 6%, #b5c6d0 5%, #e0eff9 100%)
    font-size .9em
    font-family sans-serif !important
    border-top 2px solid #BB0E3D
    height 35px
    position fixed
    top 120px
    left 0
    width 100%
    li
        &.ui-tabs-active
            background-color #ffffff
            a
                color black
                text-decoration none
                font-weight bold
        &.ui-state-hover a
                text-decoration none
        > a
            padding 10px 15px !important
            color #BB0E3D
            &:hover
                text-decoration underline

    &.horizontal-nav
        li
            display inline-block
        a
            text-decoration none
            display inline-block
            text-align center
        ul
            list-style-type none
            overflow hidden
            margin 0
            padding 0
            li
                float left
                :hover
                    > ul
                        display block
                a
                    padding 15px
            ul
                display none // hide for now

#content
    font-size 11pt
    padding-left 6%
    padding-right 6%

footer
    color black
    padding 1% 0
    clear both
    text-align center
    font-size .9em
    ul li
        list-style none
        display inline-block
        margin 0 5px
        a
          color black
          :hover
              text-decoration none

dl
    padding 0 60px
    dt
        font-weight bold

#quicklinks
    float left
    width 10%
    position absolute
    font-size 0.9em
    margin-right 2%
    #quick-title
        margin 0 auto
        padding 2%
        text-align center
        background #606060
        color #FFFFFF
        border 1px ridge #606060
    ul
        list-style none
        border 1px ridge #606060
        margin 0
        padding 5px
        li
            margin 10px auto

section
    float right
    width 85%
    margin-top 150px
    form
        display block
        > ul
            list-style none
        li
            margin 5px 0px
            overflow hidden
            > label
                display inline-block
                float left
                width 5em
            > p
                box-sizing border-box
                display inline-block
                float left
                margin 0px -13em 0px -5em
                padding 5px 13em 5px 5em
                width 100%
            > .input
                display inline-block
                width 13em
                select
                    width 100%
        .female, .male
            &:not(.show)
                display none
        input, select
            width 300px
            padding 10px
        .no-css
          display none

        .question-num
            border-right 4px #606060 solid
            color #606060
            padding 5px 0
            font-weight bold
            text-align center

        .question-text
            font-size 1.1em
            font-family "Calibri", "sans-serif", "Arial"
            text-indent 15px
        button
            float right
            padding 8px 60px
            font-size .9
        em
            font-size 0.9em

.section-content
    padding 0 20px

.section-title
    margin 1% auto
    font-weight bold
    padding 5px 20px
    background #BB0E3D
    color white
    :nth-child(2)
        float right
    a
        font-size .9em
        color inherit !important


.section-title, .section-content
    a
        text-decoration underline
        color #BB0E3D
        :hover
            text-decoration none

.section-description
    background #F0FFFF
    margin 1% auto
    padding 10px
    border 1px solid
    width 50%

.about-question-title
    border-left 2px solid #2A71A5
    padding-left 5px
    margin 1% auto

.termToDefine
    font-style italic

.references
    font-style italic
    font-size initial

.section-anchors
    margin 0 auto
    padding 0
    text-align center
    li
        display inline
        list-style none
        margin 0
        padding 0

.spacer
    border-left 2px solid
    border-color inherit
    display inline
    margin 0 10px


#reference
    width 300px

.ui-helper-hidden-accessible
    border 0
    clip rect(0 0 0 0)
    height 1px
    margin -1px
    overflow hidden
    padding 0
    position absolute
    width 1px


.default-tooltip-title
    font-size .8em
    background #8C9C9A
    font-weight bold
    color white
    border-radius 10px 10px 0 0

.default-tooltip-content
    background #D6E4E1
    font-size .9em
    line-height 1.4
    border-radius 0px 0px 10px 10px
