*
  box-sizing border-box
body
    font-family sans-serif,  Helvetica, Calibri, Arial Rounded MT Bold
    margin 0
    min-width 320px
    background #f7f8f3
a
    color inherit
header
    margin 0
    min-width 320px
    width 100%
    img
        width auto
    #nci-banner
        display block
        max-height 90px
        max-width 450px
        min-height 52px
        min-width 30px
        overflow auto
        padding-left 60px
        img
            display block
    #toolTitle
        background #2A71A5
        color white
        padding 10px 160px
        font-size .9em
        #toolName
            font-weight bold
        #toolDescription
            font-style italic
#top
    display block
    margin 0 0 40px 0
    min-height 40px
#menu-button
    display none
    float right
    height 52px
    padding 5px
    position relative
    width 60px
[tab]:not(.active)
    display none
ul.nav
    background #636363
    background linear-gradient(135deg, #fff 0%, #f2f6f8 7%, #636363 8%, #424242 7%, rgba(255,255,255,0) 100%)
    border-top 2px solid #BB0E3D
    font-size .9em
    margin 0px
    padding-left 160px
    // submenu's absolute positioning is now relative to the submenu allowing us to remove it from the flow without worrying about calculating its position on display
    position relative
    top 0
    width 100%
    li
        display inline-block
        // padding needs to happen on the header element to ensure we don't lose the submenu before we reach it
        padding 10px 15px
        &.active
            background-color #F6F9FA
            a
                color black
                font-weight bold
        a
            color white
            display inline-block
            text-align center
            text-decoration none
            &:hover
                text-decoration underline
        // reposition the subelement underneath the larger header. This breaks down literally as soon as there is a second line of headers, so mobile nav needs to start right around that point.
        ul
            background #000
            border 0px
            left 0px
            position absolute
            top 100%
        // by using :not we don't have to worry about what the original display value of the element is
        &:not(:hover) > ul
            display none
        &#quick-link ul
            background #F9FBFC
            a
                color #BB0E3D
    &.stick-nav-top
        position fixed
        z-index 10000

#content
    margin 0px
    background #F6F9FA

footer
    color black
    padding 5px 0px
    clear both
    text-align center
    font-size .9em
    ul li
        list-style none
        display inline-block
        margin 0px 5px
        a
          color black
          :hover
              text-decoration none

dl
    padding 0px 60px
    dt
        font-weight bold
hr
    width 50%
    margin 10px auto

.minimize,.maximize
    display none
    color inherit

section
    margin 0px 0px 30px
    float right
    form
        display block
        ol
            list-style decimal
            padding 0
            li
                display inline-block
                margin 5px 15px
                padding 1%
                width 45%
                max-width 100%
                vertical-align top
                border 2px solid #2A71A5
                background #fff
                ol
                    list-style lower-alpha
                .question
                    > label
                        display inline-block
                    > p
                        display inline-block
                    select, input
                        width 100%
        .female, .male
            &:not(.show)
                display none

        input, select
            padding 10px
            &.error
                border 2px solid #FC7878
        .no-css
            display none

        .question-num
            border-right 4px #606060 solid
            color #606060
            font-weight bold
            text-align center

        .question-text
            font-family "Calibri", "sans-serif", "Arial"
        button
            float right
            padding 8px 60px
            font-size .9
        em
            font-size 0.8em
        .question-illustrations
            width 100%
            margin 0 auto
            background #fff
            text-align center
            img
                width 30%
                margin 10px 0
                vertical-align top
                &:hover
                    transform scale(2.5)
        #region_subquestion
            display none
            border none
            list-style none
            width inherit
            padding 0
            margin 0
.section-content
    padding 0 1%

.section-title
    margin 5px auto
    font-weight bold
    padding 5px 20px
    background #BB0E3D
    color white
    :nth-child(2)
        float right
    a
        font-size .9em
        color inherit !important


.section-title, .section-content
    a
        text-decoration underline
        color #BB0E3D
        :hover
            text-decoration none

.section-description
    background #F0FFFF
    margin 5px auto
    padding 10px
    border 1px solid
    font-size .9em

.about-question-title
    border-left 2px solid #2A71A5
    padding-left 5px
    margin 5px auto

.termToDefine
    font-style italic

.references
    font-style italic
    font-size initial

.section-anchors
    margin 0px auto
    padding 0px
    text-align center
    li
        display inline
        list-style none
        margin 0px
        padding 0px

.spacer
    border-left 2px solid
    border-color inherit
    display inline
    margin 0px 10px


#reference
    width 300px
    *
        font-size .9em

#error
    background #FC7878
    border 5px solid #A95F5F
    border-radius 10px
    padding 30px
#result
    border 5px solid black
    border-radius 10px
    margin 0px auto
    max-width 600px
    padding 30px
    h2
        font-size 48px
        margin 0px
        text-align center
    .chart
        background #69F
        font-size 0px
        position relative
        z-index 0
        .bar
            height 20%
            left 0px
            top 0px
            position absolute
            z-index -1
            &.yours
                background #300828
            &.average
                background red
        img
            width 5%
.hide
    display none

.hidden-anchor
    display none

.ui-helper-hidden-accessible
    border 0px
    clip rect(0 0 0 0)
    height 1px
    margin -1px
    overflow hidden
    padding 0px
    position absolute
    width 1px


.default-tooltip-title
    font-size .8em
    background #8C9C9A
    font-weight bold
    color white
    border-radius 10px 10px 0px 0px
    text-decoration underline

.default-tooltip-content
    background #D6E4E1
    font-size .9em
    line-height 1.4
    border-radius 0px 0px 10px 10px

.link-icons
    display none

#topButton
    display none
    font-size 2em
    background rgba(42,113,165,.7)
    width 45px
    color white
    border-radius 25px
    text-align center
    padding 5px 0px
    position fixed
    bottom 20px
    right 20px
