body
    margin 0
    font-family sans-serif,  Helvetica, Calibri, Arial Rounded MT Bold

header
    margin 0
    background #f7f8f3
    position fixed
    top 0
    width 100%
    height 160px
    padding-top 0
    img#nci-banner
        width 95% !important
        max-width 500px
        min-width 30px
        height 60px !important
        padding 20px 10px 5px 20px
    #toolTitle
        background #2A71A5
        color white
        margin-top -6px
        padding 5px
        padding-left 100px
        #toolName
            font-weight bold
            font-size .9em
        #toolDescription
            font-size .8em
            font-style italic
nav
    background #B5C6D0
    background linear-gradient(135deg, #ffffff 0%,#f2f6f8 5%, #d8e1e7 6%, #b5c6d0 5%, #e0eff9 100%)
    margin-left -10px
    padding-left 125px
    font-size .9em
    font-family sans-serif !important
    border-top 2px solid #BB0E3D
    height 23%
    li
        a
            padding 10px 15px !important
            color black
        a:hover
            background-color #ffffff
            text-decoration underline

.horizontal-nav
    a
        text-decoration none
        display inline-block
        text-align center
    ul
        list-style-type none
        overflow hidden
        margin 0
        padding 0
        li
            float left
            :hover
                background-color #ffffff
                > ul
                    display block
            a
                padding 15px
        ul
            display none // hide for now


#content,#quicklinks,footer
    z-index -1

#content
    font-size 11pt
    padding-left 6%
    padding-right 6%
    position absolute
    top 200px
    a
        text-decoration underline
        color #BB0E3D
        :hover
            text-decoration none
    footer
        color black
        padding 2% 0
        clear both
        text-align center
        font-size .8em
        ul li
            list-style none
            display inline-block
            margin 0 5px
            a
              color black
              :hover
                  text-decoration none
dl
    padding 0 60px
    dt
        font-weight bold

#quicklinks
    float left
    width 10%
    position absolute
    font-size 0.8em
    margin-right 2%
    #quick-title
        margin 0 auto
        padding 2%
        text-align center
        background #606060
        color #FFFFFF
        border 1px ridge #606060
    ul
        list-style none
        border 1px ridge #606060
        margin 0
        padding 5px
        li
            margin 10px auto

form
    display block
    > ul
        list-style none
    li
        margin 5px 0px
        overflow hidden
        > label
            display inline-block
            float left
            width 5em
        > p
            box-sizing border-box
            display inline-block
            float left
            margin 0px -13em 0px -5em
            padding 5px 13em 5px 5em
            width 100%
        > .input
            display inline-block
            width 13em
            select
                width 100%
    input, select
        width 300px
        padding 10px

    .question-num
        border-right 4px #606060 solid
        color #606060
        padding 5px 0
        font-weight bold
        text-align center

    .question-text
        font-size 1.1em
        font-family "Calibri", "sans-serif", "Arial"
        text-indent 15px
    button
        float right
        padding 8px 60px
        font-size .9
    em
        font-size 0.9em
.female, .male
    &:not(.show)
        display none
.no-css
  display none

section
    float right
    width 85%
    margin-bottom 200px

.section-content,.section-title
    margin-top 1%
    margin-bottom 1%
.section-title
    font-weight bold
    padding 5px 20px
    background aliceblue
    :nth-child(2)
        float right
    a
        font-size .9em

.section-description
    background #F0FFFF
    margin 1% auto
    padding 10px
    border 1px solid
    width 50%

.about-question-title
    border-left 2px solid #2A71A5
    padding-left 5px
    margin 1% auto

.termToDefine
    font-style italic

.references
    font-style italic
    font-size initial

.section-anchors
    margin 0 auto
    padding 0
    text-align center
    li
        display inline
        list-style none
        margin 0
        padding 0

.spacer
    border-left 2px solid
    border-color inherit
    display inline
    margin 0 10px


    #reference
        width 300px
