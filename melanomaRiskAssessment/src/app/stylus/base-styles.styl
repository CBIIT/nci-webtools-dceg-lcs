*
  box-sizing border-box
body
    margin 0
    font-family sans-serif,  Helvetica, Calibri, Arial Rounded MT Bold
header
    margin 0
    background #f7f8f3
    width 100%
    img#nci-banner
        max-width 450px
        min-width 30px
        height 90px !important
        margin-bottom -10px
        padding-left 60px
    #toolTitle
        background #2A71A5
        color white
        padding 10px 160px
        font-size .9em
        #toolName
            font-weight bold
        #toolDescription
            font-style italic
#top
    display block
    margin 0 0 40px 0
    min-height 40px
ul.nav
    background #636363
    background linear-gradient(135deg, #fff 0%, #f2f6f8 7%, #636363 8%, #424242 7%, rgba(255,255,255,0) 100%)
    border-top 2px solid #BB0E3D
    font-size .9em
    margin 0px
    padding-left 160px
    // submenu's absolute positioning is now relative to the submenu allowing us to remove it from the flow without worrying about calculating its position on display
    position relative
    top 0
    width 100%
    li
        display inline-block
        // padding needs to happen on the header element to ensure we don't lose the submenu before we reach it0
        padding 10px 15px !important
        &.ui-tabs-active
            background-color #ffffff !important
            a
                color black !important
                font-weight bold
        a
            color white
            display inline-block
            text-align center
            text-decoration none
            &:hover
                text-decoration underline
        // reposition the subelement underneath the larger header. This breaks down literally as soon as there is a second line of headers, so mobile nav needs to start right around that point.
        ul
            background #000
            border 0px
            left 0px
            padding-left 160px
            position absolute
            top 100%
        // by using :not we don't have to worry about what the original display value of the element is
        &:not(:hover) > ul
            display none
    &.stick-nav-top
        position fixed
        z-index 10000

#content
    margin 0
    background #F7F8F3

footer
    color black
    padding 1% 0
    clear both
    text-align center
    font-size .9em
    ul li
        list-style none
        display inline-block
        margin 0 5px
        a
          color black
          :hover
              text-decoration none

dl
    padding 0 60px
    dt
        font-weight bold
hr
    width 50%
    margin 2% auto

#quicklinks
    float left
    width 200px
    font-size 0.9em
    margin 1% 0 0 5%
    #quick-title
        padding 2% 0
        text-align center
        background #606060
        color #FFFFFF
        border 1px ridge #606060

    ul
        list-style none
        border 1px ridge #606060
        margin 0
        padding 5px
        li
            margin 10px auto
            a
                color inherit
                &:hover
                    color #BB0E3D
                    text-decoration none

.minimize,.maximize
    display none
    color inherit

section
    margin 0 6% 6% 0
    width 70%
    float right
    form
        display block
        > ul
            list-style none
        li
            margin 5px 0
            overflow hidden
            > label
                display inline-block
                float left
                width 40px
            > p
                box-sizing border-box
                display inline-block
                float left
                margin 0px -13em 0px -5em
                padding 5px 13em 5px 5em
                width 100%
            > .input
                display inline-block
                width 13em
                select
                    width 100%
        .female, .male
            &:not(.show)
                display none
        input, select
            width 300px
            padding 10px
            &.error
              background #F00
        .no-css
            display none

        .question-num
            border-right 4px #606060 solid
            color #606060
            padding 5px 0
            font-weight bold
            text-align center

        .question-text
            font-size 1.1em
            font-family "Calibri", "sans-serif", "Arial"
            text-indent 15px
        button
            float right
            padding 8px 60px
            font-size .9
        em
            font-size 0.8em
        .question-illustrations
            padding-left 150px
            margin 1% auto
            height 270px
            img
                width 250px
                height 270px
                margin 1%
                &:hover
                    transform scale(1.6)
        #region_subquestion
            display none
.section-content
    padding 0

.section-title
    margin 1% auto
    font-weight bold
    padding 5px 20px
    background #BB0E3D
    color white
    :nth-child(2)
        float right
    a
        font-size .9em
        color inherit !important


.section-title, .section-content
    a
        text-decoration underline
        color #BB0E3D
        :hover
            text-decoration none

.section-description
    background #F0FFFF
    margin 1% auto
    padding 10px
    border 1px solid
    font-size .9em

.about-question-title
    border-left 2px solid #2A71A5
    padding-left 5px
    margin 1% auto

.termToDefine
    font-style italic

.references
    font-style italic
    font-size initial

.section-anchors
    margin 0 auto
    padding 0
    text-align center
    li
        display inline
        list-style none
        margin 0
        padding 0

.spacer
    border-left 2px solid
    border-color inherit
    display inline
    margin 0 10px


#reference
    width 300px
    *
        font-size .9em

#error
    background #F00
    border 5px solid #900
    border-radius 10px
    padding 30px
#result
    border 5px solid black
    border-radius 10px
    margin 0px auto
    max-width 600px
    padding 30px
    h2
        font-size 48px
        margin 0px
        text-align center
    .chart
        background #69F
        font-size 0px
        position relative
        z-index 0
        .bar
            height 20%
            left 0px
            top 0px
            position absolute
            z-index -1
            &.yours
                background #300828
            &.average
                background red
        img
            width 5%
.hide
    display none
        
.hidden-anchor
    display none

.ui-helper-hidden-accessible
    border 0
    clip rect(0 0 0 0)
    height 1px
    margin -1px
    overflow hidden
    padding 0
    position absolute
    width 1px


.default-tooltip-title
    font-size .8em
    background #8C9C9A
    font-weight bold
    color white
    border-radius 10px 10px 0 0
    text-decoration underline

.default-tooltip-content
    background #D6E4E1
    font-size .9em
    line-height 1.4
    border-radius 0px 0px 10px 10px

.link-icons
    display none

#topButton
    display none
    font-size 2em
    background rgba(42,113,165,.7)
    width 45px
    color white
    border-radius 25px
    text-align center
    padding 5px 0
    position fixed
    bottom 20px
    right 20px


