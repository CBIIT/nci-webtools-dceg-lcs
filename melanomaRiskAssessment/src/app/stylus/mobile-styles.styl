@media (max-width 1300px)
    ul.nav
        margin 0
        li
            padding 5px

@media (max-width 990px)
    header
        position relative
        #toolTitle
            text-align center
            padding 5px
    dl
        padding 0
    .spacer
        display block
    .section-anchors li, footer li
        padding 5px 0
    section form
        ol li
            margin 10px auto
            width 95%
            > p
                margin-right 0px
            > .input
                width 100%
                margin 10px auto
        .question-text
            margin 0
            padding 1%
        .question-illustrations img
            width 60%
            :hover
                transform scale(1.5)
        button
            display inherit
            margin 0 auto
            width 50%
            float none

@media (max-width 768px)
    header #nci-banner
        padding-left 25px
    header #toolTitle, .section-title
        padding 5px 0px
    .link-icons
        display inline-block
    .menu-title
        padding 5px 0px
        display block
        background-color rgba(220, 222, 224, 0.5)
        color white
        padding-left 0
    #top
        margin 0px
        min-height 0px
    #menu-button
        display block
    ul.nav
        background transparent
        padding 0px
        text-align center
        &:not(.show)
            display none
        &.stick-nav-top
            position inherit
        li
            display block
            padding 8px
            &:first-child
                margin 0px
            a
                color #bb0e3d
            &:not(:hover) > ul
                display block
            ul
                background transparent
                margin 10px 0px -5px
                position static
                &:not(.show)
                    display none
    .section-description
        width 85%
    .section-title
        overflow auto
    section
        margin 0px
    footer
        margin 25px 0px
    .minimize,.maximize
        display inline-block
    .question-illustration
        padding-left 0px

@media (max-width 480px)
    header #nci-banner
        padding-left 0px
    .section-title
        *
            display block
            text-align center
        :nth-child(2)
            float none
