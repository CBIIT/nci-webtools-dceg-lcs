@media (max-width 768px)
    #nci-banner
        padding-left 25px
    #toolTitle, #quick-title, .section-title
        padding 5px 0 !important
    .link-icons
        display inline-block
    .menu-title
        padding 5px 0px
        display block
        background-color rgba(220, 222, 224, 0.5)
        color white
        padding-left 0
    #top
        margin 0px
        min-height 0px
    #menu-button
        display block
    ul.nav
        background transparent
        padding 0px
        text-align center
        &:not(.show)
            display none
        &.stick-nav-top
            position inherit
        li
            display block
            padding 8px
            &:first-child
                margin 0px
            a
                color #bb0e3d
            &:not(:hover) > ul
                display block
            ul
                position static
                &:not(.show)
                    display none
    .section-description
        width 85%
    .section-title
        overflow auto
    section
        margin 0px
    footer
        margin 25px 0px
    .minimize,.maximize
        display inline-block
    .question-illustration
        padding-left 0px

@media (min-width 769px) and (max-width 990px)
    header
        position relative
    #toolTitle
        text-align center
        padding 5px
    dl
        padding 0
    .spacer
        display block
    .section-anchors li, footer li
        padding 5px 0
    form
        li
            margin 10px auto
            .input
                width 100%
                margin 10px auto
        .question-text
            margin-left -4em
            padding 0 0 0 5em
        button
            display inherit
            margin 0 auto
            width 50%
            float none


@media (min-width 991px) and (max-width 1300px)
    .nav
        margin 0
        li
            padding 5px
    .section-title *
        width 45%

