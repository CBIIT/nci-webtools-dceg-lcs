red = #A90101
.red
  background-color red

#main
  width 1100px
  margin 0 auto
  font-size small
.panel-title, .panel-title a
  font-size small
.title
  background lightgrey

table input[type="text"]
  width 50px

#portal-footer
  clear both
  border-top 1px solid black
  line-height 1.2em
  margin 2em 0em 1em 0em
  padding 1em 0em 1em 0em
  text-align center
  background-color #FFF
  color #333333
  font-size 79%

.top-header
  text-align center
  color #FFF

.extra-padding
  padding 1em

.extra-vertical-margin
  margin 10px 0

.panel-toggle a, .panel-title a
  color black
  font-weight bold
label
  font-weight bold

.well, #results
  min-height 645px

.termToDefine, th
  font-weight bold

.termToDefine.glyphicon
  text-decoration none

.loader
  background-image url("/common/images/loading.gif") no-repeat;
  margin 0 auto;
  height 300px
  width 100%

input[type="number"]
  width 10rem
.input:invalid
  background-color yellow