@media (max-width 992px)
	header 
		img
			&#logo
				padding 1em 1em 1em
				width 100%
		#toolTitle
			padding-left 1em
			padding-top 7px
			padding-bottom 7px
			a
				font-size 12px
		

	#results
		padding 1em
	#results_text
		text-align left
		max-width 365px
		margin-top 15%
		margin-left 0
	nav#main-nav
		background #fff
		padding 0
		text-align left
		ul
			&.nav.nav-tabs
				display block
				li
					width 50%
					float right
					&.active a
						color: #356b91;
						background: #fff;
					a
						background blue_23
						color #FFF
						border none
						&:hover, &:focus
							border none
	#form-steps
		background-color #FFF
		padding 10px 0
		box-shadow 0 0 20px grey
		font-family: 'Montserrat', sans-serif;
		&.fixed
			position fixed
			z-index 1
			width 100%
			left 0
			margin-bottom 10px
		ol
			padding 0
			span.spacer
				margin 0
			li
				margin 0.5em 0.1em
				border-radius 20px
				margin-left 6%
				margin-right 6%
				a:first-child
					display none
				a
					display block
					color inherit
					&:nth-child(2)
						background grey_86
						color white
						border-radius 22px
						width 25px
						height 25px
						text-align center
						margin 0 auto
						padding 2px
						position relative
						font-size 17px
				&.active
					font-size 24px
					&:first-child
						a
							&:first-child
								color light_teal
							&:nth-child(2)
								width 35px
								height 35px
								font-size 24px
								color #fff
								background light_teal
					&:nth-child(3)
						a
							&:first-child
								color #6150A3
							&:nth-child(2)
								width 35px
								height 35px
								font-size 24px
								color #fff
								background #6150A3
					&:nth-child(5)
						a
							&:first-child
								color #2D73A5
							&:nth-child(2)
								width 35px
								height 35px
								font-size 24px
								color #fff
								background #2D73A5
	#errors
		font-size 0.8em
		margin 1em 0
	section
		padding 1em
	.tab-pane
		padding 0 1em
	#main
		margin 0 0 1.5em 0
		padding 0
		.container
			padding inherit
	.questions,.responseOptions
		line-height 1.5

	.box
		margin 1em auto
	.btn-block
		margin 0 auto
	.footer
		line-height initial
		
		ul
			margin 1em 0 1em 2em
			li
				display block
				text-align left
				max-width 60%
				margin 0.3em 0
				&:nth-child(even)
					display none
					margin 0
					padding 0
					max-width 0
	#side_nav
		&.sidenav 
			width 0
			position fixed
			z-index 9999
			top 0
			right 0
			overflow-x hidden
			transition 0.5s
			display inline
			text-transform uppercase
			box-shadow 0px 2px 4px 0 rgba(0,0,0,0.5) 
			background #FFFFFF
			a
				padding 8px 8px 8px 15px
				text-decoration none
				font-weight bold
				font-size 14px
				color #235E88;
				display block
				transition 0.3s

				font-family: 'Montserrat', sans-serif;
				&.active a
					color #2B7BBA
	#buttons
		display -webkit-box

#inner_menu
	color #FFFFFF
	background #235E88
	font-family: 'Montserrat', sans-serif;
	font-weight bold
	padding 6px 8px 8px 15px
#Risk
	width 100%