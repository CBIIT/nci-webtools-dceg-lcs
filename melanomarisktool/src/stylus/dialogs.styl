.modal-header
	border none
	.close
		background url("./images/Exit.png")
		padding 8px 9px
		color white
		opacity initial
		background-repeat no-repeat
		&:hover, &:focus
			opacity 0.5
			
.info-dialog
	border 3px solid #D3D3D3
	color #000
	background-color #fff
	padding 1em
	button
		background #2b7bba
		color #fff
		font-weight bold
		border-radius 20px
		border none
		margin 0.3em
		&:hover,&:focus
			background #fff
			color #2b7bba
.demo-dialog
	.modal-content
		border 3px solid #339FBE
		border-radius 0 px
.error-dialog
	.modal-content
		background-color #FFFFFFF
		border 3px solid #339FBE
		
	img
		float left
	button
		color white
		background-color  #339FBE
		border-radius none
		font-weight bold
		display flex
		justify-content center
		margin 0 auto
		text-transform uppercase
		border none
		