@font-face
  font-family 'Noto Sans'
  font-weight normal
  font-style normal
  src url("fonts/NotoSans-Regular.ttf")

@font-face
  font-family 'Noto Sans'
  font-weight normal
  font-style italic
  src url("fonts/NotoSans-Italic.ttf")

@font-face
  font-family 'Montserrat'
  font-weight normal
  font-style normal
  src url("fonts/Montserrat-Regular.ttf")

*
  box-sizing border-box

[role="tooltip"]
    position fixed

button, a, .thumbnail
    cursor pointer

body
    //    font-family sans-serif,  Helvetica, Calibri, Arial Rounded MT Bold
    font-family 'Noto Sans', Arial, sans-serif
    font-size 10.5pt
    margin 0
    min-width 320px
    background #f7f8f3
    line-height 1.5

header
    margin 0
    min-width 320px
    width 100%
    img
        width auto
    #nci-banner
        display block
        overflow auto
        img
            display block
            max-height 90px
            max-width 520px
            min-height 52px
            min-width 30px
    #toolTitle
        background #2A71A5
        color white
        padding 10px 0 10px 160px
        border-bottom 2px solid #BB0E3D
        #toolDescription
            font-style italic

ul.nav, #toolDescription, .section-title, .exp-title
    font-size 11pt

a
    color inherit
    text-decoration none
    &:hover
      text-decoration underline

dl
    overflow auto
    dt
        font-weight bold
    dd
        &:nth-child(odd)
            img
                float right
        &:nth-child(even)
            img
                float left

.stock-images
    &.small
        width 170px
        height 125px

footer
    color black
    padding 5px 0
    clear both
    text-align center
    ul li
        list-style none
        display inline-block
        margin 0 5px
        a
          color black
          :hover
              text-decoration none

#top
    display block
    margin 0 0 40px 0
    min-height 40px

#topButton
    display none
    font-size 2em
    color #fff
    text-align center
    padding 5px 0
    position fixed
    bottom 20px
    right 20px
    > .fa
        margin 5px
        border 4px solid #BB0E3D
        background #BB0E3D
        background rgba(187,14,61,0.7)
        border-radius 20px

//navigation rules
#menu-button
    display none

[tab]:not(.active)
    display none

ul.nav
    background #636363
    background linear-gradient(135deg, #f7f8f3 60px, #636363 100px, #424242 120px)

    margin 0
    padding-left 200px
    // submenu's absolute positioning is now relative to the submenu allowing us to remove it from the flow without worrying about calculating its position on display
    position relative
    top 0
    width 100%
    li
        // padding needs to happen on the header element to ensure we don't lose the submenu before we reach it
        padding 10px 15px
        display inline-block
        &.active
            background-color #f7f8f3
            a
                color black
                font-weight bold
        a
            color white
            text-align center
        // reposition the subelement underneath the larger header. This breaks down literally as soon as there is a second line of headers, so mobile nav needs to start right around that point.
        ul
            font-size 0.9em
            background #000
            border 0
            left 0
            position absolute
            top 100%
            display table
            // by using :not we don't have to worry about what the original display value of the element is
            &:not(.show)
                display none
        &#quick-link ul
            background #f7f8f3
            &.nav
                padding 0
                > li
                    display table-cell
                    text-align center
                    padding 5px 0
            a
                color #BB0E3D
                font-weight bold
    &.stick-nav-top
        position fixed
        z-index 10000


// main content rules
#content
    margin 0
    background transparent

section
    padding 0 100px
    form
            display block
            font-size 0.9em
            > ol
                list-style decimal
                > li
                    display inline-block
                    margin 5px
                    padding 10px
                    width 46%
                    max-width 100%
                    height 335px
                    vertical-align top
                    overflow auto
                    border 2px solid #bb0e3d
                    border-radius 5px
                    ol
                        list-style lower-alpha
                        padding 0
                    .question
                        padding 10px 0
                        > label
                            display inline-block
                        > p
                            display inline-block
                        .input > label
                            display block
                        select, input
                            width 100%
                            &[type="radio"]
                                width 15px
                    &:nth-child(even)
                        background #fff
                    &:nth-child(odd)
                        background-color transparent
                        > .question-illustrations
                            background-color inherit
            input, select
                padding 10px
                &.error
                    border 2px solid #FC7878
                    background rgba(255,0,0,0.25)
            .no-css
                display none

            .question-num
                border-right 4px #606060 solid
                color #606060
                font-weight bold
                text-align center

            .question-text
                font-weight bold
                &.error
                    color red
            button
                display block
                margin 0 auto
                width 250px
                float none
                padding 8px 60px

.question-illustrations
    background inherit
    text-align center
    .expand
        padding 0
        width 100%
        box-shadow 3px 3px 10px #000
    img
        width 30%
        margin 5px 0
        vertical-align top

        &.stock-images
            margin 10px
            border 2px solid #D2CACA
            border-radius 5px
            max-width 230px
            max-height 140px

.section-content a
    color #BB0E3D

.section-title, .exp-title
    margin 10px auto
    font-weight bold
    padding 5px 20px
    background #BB0E3D
    border-radius 10px
    color white
    > a
        color white
        text-decoration underline
        &:hover
            text-decoration none
    :nth-child(2)
        float right

.section-description
    margin 10px auto
    padding 5px
    border 3px solid #BB0E3D
    border-radius 10px
    background #fff
    text-align center
    cursor pointer
    .heading
        font-weight bold
        font-size 1.1em
        color inherit
        text-align center
        text-decoration none
        &:hover
            text-decoration underline

    p
        padding 0
        margin 0
    .description
        margin 10px 0
        &:not(.show)
            display none

.section-anchors
    margin 10px auto
    padding 5px
    text-align center
    font-weight bold
    vertical-align top
    p
        vertical-align text-top
        display inline-block
        width 40%
        margin 5px 10px
    li
        display inline
        list-style none
        margin 0
        padding 0

.content-details
    padding 10px 15px
    margin 10px auto
    border 2px solid #2A71A5
    background white

.termToDefine
    font-style italic
    text-decoration none
    border-bottom 1px dotted
    &:hover
        border-bottom none
.references
    font-style italic
    &li
        padding 10px 0


.about-question-title
    border-left 2px solid #2A71A5
    padding-left 5px
    margin-left 15px
    font-weight bold
    > *
        font-weight bold

.about-question-explanation
    margin 0 auto
    padding 10px 15px

.ui-helper-hidden-accessible
    border 0
    clip rect(0 0 0 0)
    height 1px
    margin -1px
    overflow hidden
    padding 0
    position absolute
    width 1px

.default-tooltip-title
    background #0C5C97
    font-weight bold
    color white
    border-radius 10px 10px 0 0
    text-decoration underline

.default-tooltip-content
    background #FFFFFF
    line-height 1.4
    border-radius 0 0 10px 10px
    border 1px solid black

#error
    background #FC7878
    border 2px solid #A95F5F
    border-radius 10px
    padding 5px 10px
    font-weight bold

#result
    border 5px solid #2A71A5
    border-radius 10px
    margin 0px auto
    max-width 600px
    padding 30px
    &:not(.show)
        display none
    h2
        font-size 48px
        margin 0px
        text-align center
    canvas
        &.chart
            background-color rgba(0, 0, 0, 0.10)
            font-size 0px
            position relative
            width 100%
            z-index 0
            .bar
                height 20%
                left 0px
                top 0px
                position absolute
                z-index -1
                &.yours
                    background #BB0E3D
                    background repeating-linear-gradient(35deg, rgb(22, 56, 82) 50%, #fff 55%)
                &.average
                    background red

.rounded
    border-radius 10px

.spacer
    border-left 2px solid
    border-color inherit
    display inline
    margin 0 10px

.more
    height auto

.hide
    display none

.hidden-anchor
    display none

ul.red-arrow li
    list-style-image url("../images/red-arrow.gif")

.two-col
    float left
    margin 10px
    padding 25px 5px
    ul
        height auto
        min-height 125px
    &.green
        border 4px solid green
    &.red
        border 4px solid red
    &:nth-child(1)
        padding-right 5px
    > .graphic
        float left
        clear both
        vertical-align middle
        &.fa
            margin 0 25px
            font-size 7em

.green
    color green

.red
    color red

ul.two-col
    float left
    overflow auto
    > li
        float left
        width 45%
        margin 5px 20px

.male,.female,.subquestion
    &:not(.show)
        display none
